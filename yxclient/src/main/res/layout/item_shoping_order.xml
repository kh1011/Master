<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/shopping_order_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/item_goods_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="xx"
                android:textColor="#383838"
                android:textSize="@dimen/text_size_15sp" />

            <TextView
                android:id="@+id/item_goods_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:text="xx"
                android:textColor="#383838"
                android:textSize="@dimen/text_size_15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff1f7" />

        <RelativeLayout
            android:id="@+id/item_shop_order_content"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/item_shop_order_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/default_shop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/item_goods_order_price"
                android:layout_toRightOf="@+id/item_shop_order_img"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_goods_order_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="锤子手机"
                    android:textColor="#383838"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/item_goods_order_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="7天无理由退换"
                    android:textColor="#383838"
                    android:textSize="@dimen/text_size_13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_goods_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="¥ 50"
                android:textColor="#383838"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/item_goods_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:text="x2"
                android:textColor="#383838"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff1f7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/item_goods_order_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所选颜色:白色"
                    android:textColor="#383838"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/text_size_12sp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/item_goods_order_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品:0.1kg"
                    android:textColor="#383838"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/text_size_12sp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/item_goods_order_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="共3件商品"
                    android:textColor="#383838"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="实付款:"
                    android:textColor="#383838"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    android:id="@+id/item_goods_order_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="¥ 230.0"
                    android:textColor="#383838"
                    android:textSize="@dimen/text_size_12sp" />
            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff1f7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/item_goods_order_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/de" />

                <Button
                    android:id="@+id/item_goods_order_btn_content"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_default"
                    android:text="评价晒单"
                    android:textColor="#383838"
                    android:textSize="@dimen/text_size_12sp" />

                <Button
                    android:id="@+id/item_goods_order_buy"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_selected"
                    android:text="再次购买"
                    android:textColor="#6e99ff"
                    android:textSize="@dimen/text_size_12sp" />

                <Button
                    android:id="@+id/item_goods_order_pay"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_selected"
                    android:text="去支付"
                    android:textColor="#6e99ff"
                    android:textSize="@dimen/text_size_12sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/item_goods_order_yes"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_selected"
                    android:text="确认收货"
                    android:textColor="#6e99ff"
                    android:textSize="@dimen/text_size_12sp"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>