<?xml version="1.0" encoding="utf-8"?>
<com.jude.fitsystemwindowlayout.FitSystemWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff1f7"
    android:orientation="vertical">

    <RelativeLayout style="@style/topbar_bg">

        <ImageButton
            style="@style/topbar_return_img"
            android:visibility="visible" />

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="信息认证" />

        <Button
            style="@style/topbar_right_btn"
            android:text="完成"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="423dp"
        android:layout_margin="10dp"
        android:background="@color/common_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginTop="50dp"
            android:src="@drawable/load_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证中，请稍等"
            android:textColor="#6e99ff"
            android:textSize="18.7sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="认证资料已提交，我们将在24小时之内完成审核，请耐心等待"
            android:textColor="#777777"
            android:textSize="15.3sp" />

    </LinearLayout>

</com.jude.fitsystemwindowlayout.FitSystemWindowsLinearLayout>