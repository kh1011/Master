<?xml version="1.0" encoding="utf-8"?>
<com.jude.fitsystemwindowlayout.FitSystemWindowsLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff1f7"
    android:orientation="vertical">

    <RelativeLayout style="@style/topbar_bg">

        <ImageButton style="@style/topbar_return_img" />

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="个人信息" />

        <Button
            android:id="@+id/personal_jump"
            style="@style/topbar_right_btn"
            android:text="跳过"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/personal_re_city"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:text="所属城市"
                android:textColor="#383838"
                android:textSize="@dimen/text_size_15sp" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/img1"
                android:text=""
                android:textColor="#383838"
                android:textColorHint="#d2d2d2"
                android:textSize="@dimen/text_size_14sp" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_next_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff1f7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:clickable="true">

            <TextView
                android:id="@+id/personal_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:text="姓名："
                android:textColor="#383838"
                android:textSize="@dimen/text_size_15sp" />

            <EditText
                android:id="@+id/et_real_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/personal_text1"
                android:background="@color/transparent"
                android:hint="请输入真实姓名"
                android:paddingLeft="10dp"
                android:textColor="#383838"
                android:textColorHint="#d2d2d2"
                android:textSize="@dimen/text_size_14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff1f7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:clickable="true">

            <TextView
                android:id="@+id/personal_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:text="身份证号码："
                android:textColor="#383838"
                android:textSize="@dimen/text_size_15sp" />

            <EditText
                android:id="@+id/et_id_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/personal_text2"
                android:background="@color/transparent"
                android:hint="请输入身份证号码"
                android:paddingLeft="10dp"
                android:textColor="#383838"
                android:textColorHint="#d2d2d2"
                android:textSize="@dimen/text_size_14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff1f7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:clickable="true">

            <TextView
                android:id="@+id/personal_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:text="紧急联系人："
                android:textColor="#383838"
                android:textSize="@dimen/text_size_15sp" />

            <EditText
                android:id="@+id/et_contact_urgent_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/personal_text3"
                android:background="@color/transparent"
                android:hint="请输入紧急联系人"
                android:paddingLeft="10dp"
                android:textColor="#383838"
                android:textColorHint="#d2d2d2"
                android:textSize="@dimen/text_size_14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff1f7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:clickable="true">

            <TextView
                android:id="@+id/personal_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:text="紧急联系人电话："
                android:textColor="#383838"
                android:textSize="@dimen/text_size_15sp" />

            <EditText
                android:id="@+id/et_contact_urgent_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/personal_text4"
                android:background="@color/transparent"
                android:hint="请输入紧急联系人电话"
                android:paddingLeft="10dp"
                android:textColor="#383838"
                android:textColorHint="#d2d2d2"
                android:textSize="@dimen/text_size_14sp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/personal_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_login_btn"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_input_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="错误提示"
        android:textColor="@color/red"
        android:textSize="14sp"
        android:visibility="gone" />
</com.jude.fitsystemwindowlayout.FitSystemWindowsLinearLayout>